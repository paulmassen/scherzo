<%= form_with(model: @contact, remote: true) do |form| %>

<div class="modal-content">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  </div>
<% end %>

