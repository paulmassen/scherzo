<%= form_for @programme do |f| %>
 
 <div id="notice"></div>
    <% if programme.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(programme.errors.count, "error") %> prohibited this programme from being saved:</h2>

      <ul>
        <% programme.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </div>

  
  
  
<h3>Works</h3>
 <div id='tasks'>
    <%= f.fields_for :works do |work| %>
      <%= render 'work_fields', :f => work %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add work', f, :works,class: "btn" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
