<p id="notice"><%= notice %></p>


    
    <div class="content-body">
      <div class="card">
        <div class="card-header border-bottom">
          <h5 class="card-title">Artistes</h5>
          <div class="heading-elements">
            <button type="button" class="btn btn-outline-secondary">Ajouter Artiste</button>
          </div>
        </div>
  <div class="table-responsive">
          <table class="table mb-0">
            <thead>
              <tr>
                <th>INFO</th>
                <th class="text-right">PRICE</th>
              </tr>
            </thead>
            <tbody>
              <% @artistes.each do |artiste| %>
              <tr>
                <td>
                  <div>
                  <div class="d-flex mr-1 align-items-center">
                     <% if artiste.image.present? %>
                    <img class="rounded-circle" src="<%= artiste.image_url %>" alt="avatar" width="32" height="32">
                    <% else %>
                      <i class="bx bx-user"></i>
                      <% end %>
                   
                    <div class="ml-1"><span class="text-bold-500"><a href="<%= artiste_path(artiste) %>"><%= artiste.name %></a> </span><br><span class="text-muted"><%= artiste.instrument %></span></div>
                  </div>
                </td>
                 <td>
                  <div class="d-flex align-items-center justify-content-end">
                    <a href="<%= artiste_path(artiste) %>">
                    <i class="bx bx-chevron-right font-large-1 cursor-pointer"></i></a>
                  </div>
                </td>
              </tr>
     <% end %>
            </tbody>
          </table>
        </div>  
</div>
  </div>
<br>

<%= link_to "New Artiste", new_artiste_path, class: "btn amber darken-3" %>

